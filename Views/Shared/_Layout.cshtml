<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppStock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppStock</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Contact
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Coordonnées</a></li>
                        </ul>
                    </div> 
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Catalogue
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Catalogue" asp-action="Index">Articles</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Commande" asp-action="Panier">Panier</a></li>
                        </ul>
                    </div> 

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Administration
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Fournisseur" asp-action="Index">Fournisseurs</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="Index">Stocks</a></li>
                            <li><hr></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Article" asp-action="Index">Articles</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="ArticleFamille" asp-action="Index">Familles</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="NomTypeTVA" asp-action="Index">TVA</a></li>
                            <li><hr></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Inventaire" asp-action="Index">Inventaires</a></li>
                        </ul>
                    </div> 

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Commandes
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Commande" asp-action="Index">Clients</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="CommandeFournisseur" asp-action="Index">Fournisseur</a></li>
                            <li><hr></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Commande" asp-action="Dashboard">Traitement Clients</a></li>
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="CommandeFournisseur" asp-action="Dashboard">Traitement Fournisseurs</a></li>
                            
                        </ul>
                    </div> 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Modal -->
    <div id="testModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - AppStock - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
